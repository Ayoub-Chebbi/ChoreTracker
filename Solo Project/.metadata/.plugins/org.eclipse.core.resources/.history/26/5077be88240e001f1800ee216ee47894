    <title>Edit Course</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

<div class="container">
    <h1>Edit Course</h1>
    <form action="/classes/${chore.id}/edit" method="post">
        <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" id="title" title="title" class="form-control" value="${course.title}" required>
        </div>
        <div class="form-group">
            <label for="dayOfWeek">Day of the Week:</label>
            <input type="text" id="dayOfWeek" title="dayOfWeek" class="form-control" value="${course.dayOfWeek}" required>
        </div>
        <div class="form-group">
            <label for="price">Price:</label>
            <input type="number" id="price" title="price" class="form-control" value="${course.price}" required>
        </div>
        <div class="form-group">
            <label for="description">Description:</label>
            <textarea id="description" title="description" class="form-control" rows="5" required>${course.description}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
        <!-- Delete Button -->
        <a href="/classes/${course.id}/delete" class="btn btn-danger">Delete</a>
        <!-- Cancel Button -->
        <button type="button" class="btn btn-secondary" onclick="clearFields()">Cancel</button>
    </form>
</div>

<script>
    function clearFields() {
        // Set value of all input fields to empty
        document.getElementById("title").value = "";
        document.getElementById("dayOfWeek").value = "";
        document.getElementById("price").value = "";
        document.getElementById("description").value = "";
    }
</script>

